{
  "$schema": "http://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/warehouse.schema.json",
  "title": "WarehouseConfig",
  "type": "object",
  "required": ["metadata", "warehouse_parameters"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["name", "created", "version"],
      "properties": {
        "name": {"type": "string"},
        "created": {"type": "string"},
        "version": {"type": "string"},
        "description": {"type": "string"}
      }
    },
    "warehouse_parameters": {
      "type": "object",
      "required": ["aisles", "levels_per_aisle", "modules_per_aisle", "locations_per_module", "storage_depth", "picking_stations"],
      "properties": {
        "aisles": {"type": "integer", "minimum": 1},
        "levels_per_aisle": {"type": "array", "items": {"type": "integer", "minimum": 0}},
        "modules_per_aisle": {"type": "integer", "minimum": 1},
        "locations_per_module": {"type": "integer", "minimum": 1},
        "storage_depth": {"type": "integer", "minimum": 1},
        "picking_stations": {"type": "integer", "minimum": 0}
      }
    },
    "missing_locations": {"type": "array", "items": {"type": "object"}},
    "location_types": {"type": "array", "items": {"type": "object"}},
    "plc_stations": {"type": "array", "items": {"type": "object"}}
  }
}
